/* pages/certificate/certificate.wxss */

.container {
  min-height: 100vh;
  padding: var(--spacing-md);
  background-color: var(--bg-color);
}

/* 证书预览区域 */
.certificate-preview {
  margin-bottom: var(--spacing-md);
  position: relative;
}
.certificate-canvas {
  width: 100%;
  height: 400rpx;
  display: block;
  border-radius: var(--radius-md);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.preview-placeholder {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 2;
  pointer-events: none;
}

.placeholder-icon {
  font-size: 120rpx;
  margin-bottom: var(--spacing-md);
  opacity: 0.6;
}

.placeholder-text {
  font-size: var(--font-md);
  color: var(--text-secondary);
  text-align: center;
  opacity: 0.8;
}

/* 证书信息 */
.certificate-info {
  margin-bottom: var(--spacing-md);
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md) 0;
  border-bottom: 1rpx solid var(--border-light);
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: var(--font-md);
  color: var(--text-secondary);
}

.info-value {
  font-size: var(--font-md);
  font-weight: var(--font-medium);
  color: var(--text-primary);
}

/* 证书等级说明 */
.level-section {
  margin-bottom: var(--spacing-md);
}

.section-title {
  font-size: var(--font-lg);
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: var(--spacing-md);
}

.level-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-sm);
}

.level-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-md);
  background-color: var(--bg-gray);
  border-radius: var(--radius-md);
  transition: all var(--transition-base);
}

.level-item.unlocked {
  background: linear-gradient(135deg, rgba(137, 183, 255, 0.1) 0%, rgba(165, 199, 255, 0.1) 100%);
  border: 2rpx solid var(--primary-color);
}

.level-item.locked {
  opacity: 0.5;
}

.level-icon {
  font-size: 48rpx;
  margin-right: var(--spacing-md);
}

.level-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.level-name {
  font-size: var(--font-md);
  font-weight: var(--font-medium);
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.level-days {
  font-size: var(--font-sm);
  color: var(--text-secondary);
}

.level-status {
  font-size: var(--font-lg);
  color: var(--success-color);
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: row;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-md);
  margin-top: var(--spacing-md);
}

.action-btn {
  flex: 1;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-lg);
  border: none;
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-base);
}

.action-btn::after {
  border: none;
}

.action-btn:active:not([disabled]) {
  transform: scale(0.98);
}

.action-btn[disabled] {
  opacity: 0.5;
}

.save-btn {
  background: linear-gradient(135deg, var(--success-color) 0%, #3FA563 100%);
}

.share-btn {
  background: linear-gradient(135deg, var(--info-color) 0%, #357ABD 100%);
}

.btn-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.btn-text {
  font-size: var(--font-lg);
  color: #FFFFFF;
  font-weight: var(--font-medium);
}

/* 提示文字 */
.tip-section {
  text-align: center;
  padding: var(--spacing-md);
}

.tip-text {
  font-size: var(--font-sm);
  color: var(--text-tertiary);
}
