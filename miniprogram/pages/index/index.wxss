/* pages/index/index.wxss */

.container {
  min-height: 100vh;
  padding-bottom: 120rpx;
  background: linear-gradient(180deg, #E5F0FF 0%, #F5F5F5 40%);
}

/* ==================== 戒烟天数展示区 ==================== */
.quit-days-section {
  padding: 60rpx 0;
  text-align: center;
}

.quit-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.quit-title {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-bottom: 20rpx;
}

.quit-days-wrapper {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 16rpx;
}

.quit-days-number {
  font-size: 120rpx;
  font-weight: bold;
  color: var(--primary-color);
  line-height: 1;
}

.quit-days-unit {
  font-size: 40rpx;
  color: var(--primary-color);
  margin-left: 16rpx;
}

.quit-subtitle {
  font-size: 28rpx;
  color: var(--text-tertiary);
}

/* ==================== 签到区域 ==================== */
.checkin-section {
  margin: 0 var(--spacing-md) var(--spacing-md);
}

.checkin-header {
  padding-bottom: var(--spacing-md);
  border-bottom: 1rpx solid var(--border-light);
}

.checkin-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.checkin-label {
  font-size: var(--font-sm);
  color: var(--text-secondary);
  margin-bottom: 8rpx;
}

.checkin-days {
  font-size: var(--font-xl);
  font-weight: bold;
  color: var(--primary-color);
}

.checkin-button-wrapper {
  padding: var(--spacing-lg) 0;
}

.checkin-button {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  border-radius: var(--radius-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: var(--font-lg);
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 16rpx rgba(137, 183, 255, 0.3);
  transition: all var(--transition-base);
}

.checkin-button::after {
  border: none;
}

.checkin-button:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 8rpx rgba(137, 183, 255, 0.2);
}

.checkin-button.checked {
  background: linear-gradient(135deg, #CCCCCC 0%, #DDDDDD 100%);
  box-shadow: none;
}

.checkin-button-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.checkin-button-text {
  font-size: var(--font-lg);
}

.checkin-footer {
  text-align: center;
  padding-top: var(--spacing-sm);
}

.checkin-tip {
  font-size: var(--font-sm);
  color: var(--primary-color);
}

/* ==================== 快捷入口 ==================== */
.quick-entry-section {
  margin: 0 var(--spacing-md) var(--spacing-md);
}

.section-title {
  font-size: var(--font-lg);
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: var(--spacing-md);
}

.quick-entry-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--spacing-md);
}

.quick-entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: var(--bg-white);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-base);
}

.quick-entry-item:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-md);
}

.quick-entry-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.quick-entry-name {
  font-size: var(--font-sm);
  color: var(--text-primary);
  text-align: center;
}

/* ==================== 健康收益统计 ==================== */
.health-stats-section {
  margin: 0 var(--spacing-md) var(--spacing-md);
}

.health-stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-md);
  margin: var(--spacing-md) 0;
}

.health-stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-md) 0;
}

.health-stat-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.health-stat-value {
  font-size: var(--font-xl);
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.health-stat-label {
  font-size: var(--font-xs);
  color: var(--text-secondary);
}

.health-tip {
  text-align: center;
  padding-top: var(--spacing-sm);
  border-top: 1rpx solid var(--border-light);
}

/* ==================== 戒烟方法推荐 ==================== */
.methods-section {
  margin: 0 var(--spacing-md) var(--spacing-md);
}

.more-link {
  font-size: var(--font-sm);
  color: var(--text-tertiary);
}

.article-list {
  margin-top: var(--spacing-md);
}

.article-item {
  margin-bottom: var(--spacing-md);
  padding: var(--spacing-md);
  transition: all var(--transition-base);
}

.article-item:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-md);
}

.article-title {
  font-size: var(--font-md);
  color: var(--text-primary);
  font-weight: var(--font-medium);
  margin-bottom: 12rpx;
}

.article-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: var(--font-xs);
  color: var(--text-tertiary);
}

.article-tag {
  background-color: var(--bg-gray);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  color: var(--primary-color);
}

.article-views {
  color: var(--text-tertiary);
}

/* ==================== 广告区域 ==================== */
.ad-section {
  margin: var(--spacing-md);
  display: flex;
  justify-content: center;
}

/* ==================== 日期选择弹窗 ==================== */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.modal-content {
  width: 600rpx;
  background-color: var(--bg-white);
  border-radius: var(--radius-lg);
  overflow: hidden;
}

.modal-header {
  padding: var(--spacing-lg);
  text-align: center;
  border-bottom: 1rpx solid var(--border-light);
}

.modal-title {
  font-size: var(--font-lg);
  font-weight: bold;
  color: var(--text-primary);
}

.modal-body {
  padding: var(--spacing-xl) var(--spacing-lg);
}

.date-picker {
  padding: var(--spacing-md);
  background-color: var(--bg-gray);
  border-radius: var(--radius-md);
  text-align: center;
  font-size: var(--font-md);
  color: var(--text-primary);
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid var(--border-light);
}

.modal-button {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: var(--font-md);
  background-color: transparent;
  border: none;
  border-radius: 0;
}

.modal-button::after {
  border: none;
}

.modal-button.cancel {
  color: var(--text-secondary);
  border-right: 1rpx solid var(--border-light);
}

.modal-button.confirm {
  color: var(--primary-color);
  font-weight: bold;
}
