/* pages/methods/methods.wxss */

.container {
  min-height: 100vh;
  padding-bottom: 120rpx;
  background-color: var(--bg-color);
}

/* 分类标签 */
.category-tabs {
  position: sticky;
  top: 0;
  z-index: 10;
  background-color: var(--bg-white);
  padding: var(--spacing-md) 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tabs-scroll {
  width: 100%;
  white-space: nowrap;
}

.tabs-wrapper {
  display: inline-flex;
  padding: 0 var(--spacing-md);
  gap: var(--spacing-md);
}

.tab-item {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background-color: var(--bg-gray);
  border-radius: 32rpx;
  transition: all var(--transition-base);
}

.tab-item.active {
  background-color: var(--primary-color);
}

.tab-text {
  font-size: var(--font-md);
  color: var(--text-primary);
  white-space: nowrap;
}

.tab-item.active .tab-text {
  color: #FFFFFF;
  font-weight: var(--font-medium);
}

/* 文章列表 */
.article-list {
  padding: var(--spacing-md);
}

.article-item {
  margin-bottom: var(--spacing-md);
  overflow: hidden;
  transition: all var(--transition-base);
}

.article-item:active {
  transform: scale(0.98);
}

.article-cover {
  width: 100%;
  height: 360rpx;
  display: block;
  background-color: var(--bg-gray);
  border-radius: var(--radius-lg) var(--radius-lg) 0 0;
}

.article-info {
  padding: var(--spacing-md);
}

.article-title {
  display: block;
  font-size: var(--font-lg);
  font-weight: var(--font-medium);
  color: var(--text-primary);
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.article-summary {
  display: block;
  font-size: var(--font-sm);
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: var(--spacing-md);
}

.article-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: nowrap;
}

.meta-left {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.category-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, rgba(137, 183, 255, 0.15), rgba(137, 183, 255, 0.08));
  color: var(--primary-color);
  font-size: 22rpx;
  font-weight: 500;
  border-radius: 12rpx;
  white-space: nowrap;
}

.meta-right {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex-shrink: 0;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  background-color: var(--bg-gray);
  transition: all var(--transition-base);
}

.view-item {
  background-color: rgba(0, 0, 0, 0.03);
}

.like-item {
  background-color: rgba(255, 92, 92, 0.08);
}

.like-item:active {
  transform: scale(0.95);
}

.like-item.liked {
  background-color: rgba(255, 92, 92, 0.15);
}

.meta-item .icon {
  font-size: 28rpx;
  line-height: 1;
  display: flex;
  align-items: center;
}

.view-item .icon {
  opacity: 0.6;
}

.like-item .icon {
  animation: heartBeat 0.3s ease;
}

.like-item.liked .icon {
  animation: heartPulse 0.6s ease;
}

.meta-item .count {
  font-size: 24rpx;
  font-weight: 500;
  color: var(--text-secondary);
  line-height: 1;
  min-width: 32rpx;
  text-align: left;
  margin-left: 6rpx;
}

.like-item.liked .count {
  color: var(--danger-color);
  font-weight: 600;
}

@keyframes heartBeat {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

@keyframes heartPulse {
  0% {
    transform: scale(1);
  }
  25% {
    transform: scale(1.2);
  }
  50% {
    transform: scale(1);
  }
  75% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
  }
}

/* 加载状态 */
.loading-status,
.empty-status,
.no-more-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl) 0;
}

.loading-text,
.empty-text,
.no-more-text {
  font-size: var(--font-sm);
  color: var(--text-tertiary);
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: var(--spacing-md);
}

/* 广告区域 */
.ad-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  background-color: var(--bg-white);
  padding: var(--spacing-sm);
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}
