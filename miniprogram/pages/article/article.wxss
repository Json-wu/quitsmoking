/* pages/article/article.wxss */

.container {
  min-height: 100vh;
  padding-bottom: 120rpx;
  background-color: var(--bg-color);
}

/* 文章头部 */
.article-header {
  background-color: var(--bg-white);
  margin-bottom: var(--spacing-md);
}

.cover-image {
  width: 100%;
  height: 400rpx;
  display: block;
  background-color: var(--bg-gray);
}

.header-content {
  padding: var(--spacing-lg);
}

.article-title {
  display: block;
  font-size: var(--font-xxl);
  font-weight: bold;
  color: var(--text-primary);
  line-height: 1.4;
  margin-bottom: var(--spacing-md);
}

.article-meta {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.category-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  background-color: rgba(137, 183, 255, 0.1);
  color: var(--primary-color);
  font-size: var(--font-sm);
  border-radius: 8rpx;
}

.publish-date {
  font-size: var(--font-sm);
  color: var(--text-tertiary);
}

/* 文章内容 */
.article-body {
  background-color: var(--bg-white);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
  line-height: 1.8;
  font-size: var(--font-md);
  color: var(--text-primary);
}

.article-body rich-text {
  word-break: break-all;
}

/* 文章标签 */
.article-tags {
  background-color: var(--bg-white);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-md);
  display: flex;
  align-items: flex-start;
}

.tag-label {
  font-size: var(--font-sm);
  color: var(--text-secondary);
  margin-right: var(--spacing-sm);
  flex-shrink: 0;
}

.tags-list {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
}

.tag-item {
  display: inline-block;
  padding: 4rpx 12rpx;
  background-color: var(--bg-gray);
  color: var(--text-secondary);
  font-size: var(--font-xs);
  border-radius: 8rpx;
}

/* 互动区域 */
.interaction-section {
  margin: 0 var(--spacing-md) var(--spacing-md);
}

.interaction-stats {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: var(--spacing-lg) 0;
  border-bottom: 1rpx solid var(--border-light);
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-icon {
  font-size: 32rpx;
}

.stat-text {
  font-size: var(--font-md);
  color: var(--text-secondary);
  margin-left: 6rpx;
}

.interaction-buttons {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: var(--spacing-md) 0;
}

.interaction-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  background-color: transparent;
  border: none;
  padding: 0;
}

.interaction-btn::after {
  border: none;
}

.btn-icon {
  font-size: 40rpx;
}

.btn-text {
  font-size: var(--font-sm);
  color: var(--text-secondary);
}

.interaction-btn.active .btn-text {
  color: var(--primary-color);
  font-weight: var(--font-medium);
}

/* 相关推荐 */
.related-section {
  background-color: var(--bg-white);
  padding: var(--spacing-lg);
  margin: 0 var(--spacing-md) var(--spacing-md);
  border-radius: var(--radius-lg);
}

.section-header {
  margin-bottom: var(--spacing-md);
}

.section-title {
  font-size: var(--font-lg);
  font-weight: bold;
  color: var(--text-primary);
}

.related-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.related-item {
  display: flex;
  gap: var(--spacing-md);
  transition: all var(--transition-base);
}

.related-item:active {
  opacity: 0.7;
}

.related-cover {
  width: 200rpx;
  height: 140rpx;
  border-radius: var(--radius-sm);
  background-color: var(--bg-gray);
  flex-shrink: 0;
}

.related-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.related-title {
  font-size: var(--font-md);
  color: var(--text-primary);
  line-height: 1.4;
}

.related-meta {
  font-size: var(--font-xs);
  color: var(--text-tertiary);
}

/* 广告区域 */
.ad-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  background-color: var(--bg-white);
  padding: var(--spacing-sm);
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}
