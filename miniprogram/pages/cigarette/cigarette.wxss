/* pages/cigarette/cigarette.wxss */

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #2C3E50 0%, #34495E 100%);
}

/* Canvas区域 */
.canvas-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl) 0;
}

.cigarette-canvas {
  width: 375rpx;
  height: 667rpx;
}

/* 操作按钮 */
.action-buttons {
  padding: var(--spacing-lg) var(--spacing-md);
}

.button-row {
  display: flex;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-md);
}

.action-btn {
  flex: 1;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-lg);
  border: none;
  box-shadow: var(--shadow-md);
  transition: all var(--transition-base);
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.95);
}

.light-btn {
  background: linear-gradient(135deg, #89B7FF 0%, #A5C7FF 100%);
}

.puff-btn {
  background: linear-gradient(135deg, #4ECDC4 0%, #44A08D 100%);
}

.shake-btn {
  background: linear-gradient(135deg, #F39C12 0%, #E67E22 100%);
}

.new-btn {
  background: linear-gradient(135deg, #9B59B6 0%, #8E44AD 100%);
}

.btn-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: var(--font-md);
  color: #FFFFFF;
  font-weight: var(--font-medium);
}

/* 送烟按钮 */
.share-section {
  padding: 0 var(--spacing-md) var(--spacing-md);
}

.share-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #FFD93D 0%, #FFA500 100%);
  border-radius: var(--radius-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: var(--shadow-md);
}

.share-btn::after {
  border: none;
}

.share-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.share-text {
  font-size: var(--font-lg);
  color: #FFFFFF;
  font-weight: bold;
}

/* 统计信息 */
.stats-section {
  margin: 0 var(--spacing-md) var(--spacing-md);
  background-color: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
}

.stats-title {
  font-size: var(--font-lg);
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: var(--spacing-md);
  text-align: center;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-md);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: var(--font-xxl);
  font-weight: bold;
  color: #FFD93D;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: var(--font-xs);
  color: rgba(255, 255, 255, 0.7);
}

/* 提示文字 */
.tip-text {
  text-align: center;
  padding-bottom: var(--spacing-lg);
}

.tip-text text {
  color: rgba(255, 255, 255, 0.6);
}
