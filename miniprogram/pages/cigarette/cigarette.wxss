/* pages/cigarette/cigarette.wxss */

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #2C3E50 0%, #34495E 100%);
  overflow: hidden;
}

/* Canvas区域 - 紧凑布局 */
.canvas-wrapper {
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0 20rpx 0;
}

.cigarette-canvas {
  width: 600rpx;
  height: 280rpx;
}

/* 操作按钮 - 紧凑纵向排列 */
.action-buttons {
  padding: 0 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  flex: 1;
  overflow-y: auto;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.1);
  opacity: 0;
  transition: opacity 0.2s ease;
}

.action-btn:active::before {
  opacity: 1;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.98);
}

.light-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.puff-btn {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.shake-btn {
  background: linear-gradient(135deg, #ffa751 0%, #ffe259 100%);
}

.new-btn {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.btn-text {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* 送烟按钮 - 精美样式 */
.share-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(250, 112, 154, 0.4);
  position: relative;
  overflow: hidden;
}

.share-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.2);
  opacity: 0;
  transition: opacity 0.2s ease;
}

.share-btn:active::before {
  opacity: 1;
}

.share-btn::after {
  border: none;
}

.share-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.share-text {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* 提示文字 - 紧凑样式 */
.tip-text {
  text-align: center;
  padding: 16rpx 24rpx;
}

.tip-text text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
  line-height: 1.5;
}

/* 统计信息 - 精美卡片 */
.stats-section {
  margin: 16rpx 24rpx 24rpx 24rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.15) 0%, rgba(255, 255, 255, 0.05) 100%);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.stats-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 20rpx;
  text-align: center;
  letter-spacing: 2rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 8rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #FFD93D;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 8rpx rgba(255, 217, 61, 0.3);
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  letter-spacing: 1rpx;
}
