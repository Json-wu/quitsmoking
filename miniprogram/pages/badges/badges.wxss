/* pages/badges/badges.wxss */
.container {
  min-height: 100vh;
  padding: 0;
  background: linear-gradient(180deg, #f8f9ff 0%, #ffffff 100%);
}

/* 页面标题 */
.header {
  text-align: center;
  padding: 60rpx 40rpx 40rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 0 40rpx 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.25);
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.header::after {
  content: '';
  position: absolute;
  bottom: -30%;
  left: -10%;
  width: 150rpx;
  height: 150rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
}

.title {
  display: block;
  font-size: 52rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
  position: relative;
  z-index: 1;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  position: relative;
  z-index: 1;
}

/* 勋章列表 */
.badges-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding: 0 24rpx 40rpx;
}

.badge-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 28rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.badge-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, transparent);
  transition: all 0.3s ease;
}

.badge-card.unlocked {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9ff 100%);
  border: 2rpx solid transparent;
  background-clip: padding-box;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.15);
}

.badge-card.unlocked::before {
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.badge-card.locked {
  background: #fafbfc;
  border: 2rpx solid #f0f0f0;
}

.badge-card.locked::before {
  display: none;
}

/* 勋章图标区域 */
.badge-icon-wrapper {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  background: linear-gradient(135deg, #f8f9ff 0%, #ffffff 100%);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.badge-card.unlocked .badge-icon-wrapper {
  background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.1);
}

.badge-icon {
  font-size: 88rpx;
  transition: all 0.3s ease;
}

.badge-card.locked .badge-icon {
  filter: grayscale(100%) opacity(0.4);
  font-size: 80rpx;
}

.badge-status {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: white;
  font-size: 20rpx;
  padding: 6rpx 14rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
  border: 3rpx solid white;
}

.status-text {
  font-weight: bold;
  letter-spacing: 1rpx;
}

.badge-lock {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  background: linear-gradient(135deg, #94a3b8 0%, #64748b 100%);
  color: white;
  font-size: 28rpx;
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  border: 3rpx solid white;
}

.lock-icon {
  font-size: 26rpx;
}

/* 勋章信息 */
.badge-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.badge-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
  letter-spacing: 1rpx;
  margin-bottom: 4rpx;
}

.badge-card.locked .badge-name {
  color: #94a3b8;
}

.badge-desc {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.5;
}

.badge-card.locked .badge-desc {
  color: #cbd5e1;
}

.badge-progress {
  margin-top: 8rpx;
  display: inline-block;
}

.progress-text {
  font-size: 24rpx;
  color: #f59e0b;
  font-weight: 600;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
  border: 1rpx solid #fbbf24;
}

.badge-unlock-date {
  margin-top: 8rpx;
  display: inline-block;
}

.unlock-text {
  font-size: 24rpx;
  color: #10b981;
  font-weight: 500;
  background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
  border: 1rpx solid #34d399;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  display: block;
  font-size: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.2;
  filter: grayscale(100%);
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #94a3b8;
  letter-spacing: 1rpx;
}
